<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_fragment"
    app:startDestination="@+id/home_fragment">

    <fragment
        android:id="@+id/home_fragment"
        android:name="com.beside.hackathon.presentation.view.home.HomeFragment"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_solveQuizFragment"
            app:destination="@id/solve_quiz_fragment" />

    </fragment>

    <fragment
        android:id="@+id/login_fragment"
        android:name="com.beside.hackathon.presentation.view.login.LoginFragment"
        tools:layout="@layout/fragment_login">
    </fragment>

    <fragment
        android:id="@+id/solve_quiz_fragment"
        android:name="com.beside.hackathon.presentation.view.quiz.SolveQuizFragment"
        tools:layout="@layout/fragment_solve_quiz">
    </fragment>

</navigation>